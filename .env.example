# CNBC Stock Recommendation Application Environment Variables

# Application Configuration
APP_NAME=CNBC Stock Advisor
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
PAPER_TRADING=true

# Database Configuration (if using external DB)
DATABASE_URL=postgresql://user:password@localhost:5432/cnbc_stock_advisor
REDIS_URL=redis://localhost:6379

# MCP Server Configuration
MCP_INDEX_SERVER_PORT=8001
MCP_RECOMMENDATION_SERVER_PORT=8002
MCP_TRADING_SERVER_PORT=8003

# External API Keys (Replace with your actual keys)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_key_here
POLYGON_API_KEY=your_polygon_key_here
FINNHUB_API_KEY=your_finnhub_key_here

# News and Sentiment APIs
NEWS_API_KEY=your_news_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# LangChain Configuration
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=cnbc-stock-advisor
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# OpenAI Configuration (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# SMS Configuration (for alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Risk Management
MAX_POSITION_SIZE=0.25
MAX_DAILY_LOSS=0.05
STOP_LOSS_THRESHOLD=0.03
PORTFOLIO_VAR_LIMIT=0.05

# Trading Configuration
PAPER_TRADING=true
BROKER_API_KEY=your_broker_api_key_here
BROKER_SECRET_KEY=your_broker_secret_key_here

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here

# Frontend Configuration
VITE_APP_NAME=CNBC Stock Advisor
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_PAPER_TRADING=true